<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    android:padding="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#40FFFFFF"
        android:padding="4dp">

        <!-- Term Title -->
        <CheckBox
            android:id="@+id/cbTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term 1 (USD 1200)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Sub-Fees Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="8dp">

            <CheckBox
                android:id="@+id/cbUniform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Include School Uniform (USD 1400)"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbStationary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Include Stationary (USD 1500)"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/cbTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Include Transportation (USD 1800)"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

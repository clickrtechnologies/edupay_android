<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Header with Name and Condition -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvProfileName"
                    style="@style/manrope.semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liam Smith"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/text_color" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvCondition"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="schizophrenia and"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Profile Photo Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp"
                app:cardElevation="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivSchoolLogo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/upload_image"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Personal Details Section -->
            <com.example.edupay.font.RobotoTextView
                style="@style/manrope.semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginBottom="12dp" />

            <!-- Personal Details Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:paddingStart="8dp">

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvFatherName"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fat name: Samuel Blissie"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvDob"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth: January 1, 1987"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvGender"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender: Male"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvNationality"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nationality: American"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvAddress"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address: California - United States"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvHealth"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mixed Health: LTXB 10D-1U14"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvEmail"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: schizophrenia.com"
                    android:textSize="16sp"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <!-- Accrued Details Section -->
            <com.example.edupay.font.RobotoTextView
                style="@style/manrope.semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accrued Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginBottom="12dp" />

            <!-- Accrued Details Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:paddingStart="8dp">

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvDisplayName"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display Name: 5, adhux, M4850"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvAccruedContact"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accrued Contact: Macio 21, 2020"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvLastLogin"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Login: August 21, 2014"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvMonitoringStatus"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monitoring Status: Phoenix Medical"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvAccruedPublication"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accrued publication: Home"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvLanguageAuthorities"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language Authorities: Engine"
                    android:textSize="16sp"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <!-- Action Buttons -->
            <com.example.edupay.font.RobotoTextView
                android:id="@+id/btnUploadPhoto"
                style="@style/manrope.semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_child_photo"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border_btn"
                android:paddingVertical="14dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="6dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/btn_color">

                <Button
                    android:id="@+id/btnGoToDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_dashboard"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingVertical="14dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</layout>
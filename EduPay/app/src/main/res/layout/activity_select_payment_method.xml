<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradient_background"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.edupay.font.RobotoTextView
                    android:layout_width="wrap_content"
                    style="@style/manrope.Bold"
                    android:textColor="@color/btn_color"
                    android:layout_height="wrap_content"
                    android:text="@string/select_payment_method"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerPaymentMethod"
                    style="@style/manrope.semibold"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Bank Transfer Section -->
                <LinearLayout
                    android:id="@+id/layoutBankDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_white_bg"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clMobile">



                        <!-- TextInputLayout with TextInputEditText -->
                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/hitBank"
                            style="@style/manrope.semibold"
                            android:layout_width="103dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/hint_bank_name"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@android:color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/etBankName"
                            android:layout_width="0dp"
                            style="@style/manrope.semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:hint="@string/enter_here"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/btn_color"
                            android:textColorHint="@color/btn_color"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/hitBank"
                            app:layout_constraintTop_toBottomOf="@+id/hitBank" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_white_bg"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clMobile">



                        <!-- TextInputLayout with TextInputEditText -->
                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/hitAccount"
                            style="@style/manrope.semibold"
                            android:layout_width="103dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/hint_account_number"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@android:color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/etAccountNumber"
                            android:layout_width="0dp"
                            style="@style/manrope.semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:hint="@string/enter_here"
                            android:inputType="number"
                            android:textColor="@color/btn_color"
                            android:textColorHint="@color/btn_color"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/hitAccount"
                            app:layout_constraintTop_toBottomOf="@+id/hitAccount" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

                <!-- PIN Section -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clMobile">



                    <!-- TextInputLayout with TextInputEditText -->
                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitpin"
                        style="@style/manrope.semibold"
                        android:layout_width="103dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/hint_enter_pin"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:boxBackgroundMode="none"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etPin"
                        android:layout_width="0dp"
                        style="@style/manrope.semibold"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/enter_here"
                        android:inputType="numberPassword"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/hitpin"
                        app:layout_constraintTop_toBottomOf="@+id/hitpin" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- CRDB Ref Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutCrdbRef"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clMobile">



                    <!-- TextInputLayout with TextInputEditText -->
                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitCrdbRef"
                        style="@style/manrope.semibold"
                        android:layout_width="103dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/hint_crdb_reference"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:boxBackgroundMode="none"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etCrdbRef"
                        android:layout_width="0dp"
                        style="@style/manrope.semibold"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/enter_here"
                        android:inputType="text"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/hitCrdbRef"
                        app:layout_constraintTop_toBottomOf="@+id/hitCrdbRef" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- Mobile Money Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutMobileMoney"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clMobile">



                    <!-- TextInputLayout with TextInputEditText -->
                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitMobileMoney"
                        style="@style/manrope.semibold"
                        android:layout_width="103dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/hint_crdb_reference"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:boxBackgroundMode="none"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etMobileMoney"
                        android:layout_width="0dp"
                        style="@style/manrope.semibold"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/enter_here"
                        android:inputType="phone"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/hitMobileMoney"
                        app:layout_constraintTop_toBottomOf="@+id/hitMobileMoney" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Pay Now Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPayNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_now"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
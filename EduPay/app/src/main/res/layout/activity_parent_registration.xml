<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_white_bg"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clMobile">

                <!-- Icon on the left side -->

                <!-- TextInputLayout with TextInputEditText -->
                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/hitFather"
                    style="@style/manrope.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/father_name"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="14sp"
                    app:boxBackgroundMode="none"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etFatherName"
                    android:layout_width="0dp"
                    style="@style/manrope.semibold"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:hint="@string/ent_father_name"
                    android:inputType="textPersonName"
                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/hitFather"
                    app:layout_constraintTop_toBottomOf="@+id/hitFather" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="16dp"
                android:background="@drawable/rounded_white_bg"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clMobile">

                <!-- Icon on the left side -->

                <!-- TextInputLayout with TextInputEditText -->
                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/hitMother"
                    style="@style/manrope.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/mother_name"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="14sp"
                    app:boxBackgroundMode="none"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etMotherName"
                    android:layout_width="0dp"
                    style="@style/manrope.semibold"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:hint="@string/ent_mother_name"
                    android:inputType="textPersonName"
                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/hitMother"
                    app:layout_constraintTop_toBottomOf="@+id/hitMother" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="16dp"
                android:background="@drawable/rounded_white_bg"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clMobile">

                <!-- Icon on the left side -->

                <!-- TextInputLayout with TextInputEditText -->
                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/hitMobile"
                    style="@style/manrope.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/prim_no"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="14sp"
                    app:boxBackgroundMode="none"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="0dp"
                    style="@style/manrope.semibold"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:hint="@string/ent_mother_name"
                    android:inputType="phone"
                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:clickable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/hitMobile"
                    app:layout_constraintTop_toBottomOf="@+id/hitMobile" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="16dp"
                android:background="@drawable/rounded_white_bg"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clMobile">

                <!-- Icon on the left side -->

                <!-- TextInputLayout with TextInputEditText -->
                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/hitEmail"
                    style="@style/manrope.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/email_address"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="14sp"
                    app:boxBackgroundMode="none"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    style="@style/manrope.semibold"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/hitEmail"
                    app:layout_constraintTop_toBottomOf="@+id/hitEmail" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.example.edupay.font.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_note"
                android:textColor="@color/btn_color"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAltEmai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="16dp"
                android:background="@drawable/rounded_white_bg"
                android:gravity="center_vertical"
                android:minHeight="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clMobile">

                <!-- Icon on the left side -->

                <!-- TextInputLayout with TextInputEditText -->
                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/hitAltEmail"
                    style="@style/manrope.semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/add_email"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="14sp"
                    app:boxBackgroundMode="none"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etAltEmail"
                    android:layout_width="0dp"
                    style="@style/manrope.semibold"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:hint="@string/enter_ad_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/hitAltEmail"
                    app:layout_constraintTop_toBottomOf="@+id/hitAltEmail" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="6dp"
                android:layout_marginTop="48dp"
                app:cardBackgroundColor="@color/btn_color">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingVertical="14dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</layout>

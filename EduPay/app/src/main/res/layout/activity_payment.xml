<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/logo_description" />

    <!-- White rounded container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <com.example.edupay.font.RobotoTextView
                    style="@style/manrope.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_subscription_payment"
                    android:textSize="20sp"
                    android:layout_marginBottom="24dp"/>

                <!-- Dropdown label -->
                <com.example.edupay.font.RobotoTextView
                    style="@style/manrope.regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_plan"
                    android:layout_marginBottom="8dp"/>

                <!-- Dropdown Spinner -->
                <Spinner
                    android:id="@+id/spinnerPlan"
                    style="@style/manrope.semibold"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp"/>

                <!-- From info -->
                <com.example.edupay.font.RobotoTextView
                    style="@style/manrope.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from_your_school"
                    android:layout_marginBottom="4dp"/>

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvFromSchoolInfo"
                    style="@style/manrope.regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_school_info"
                    android:layout_marginBottom="24dp"/>

                <!-- To info -->
                <com.example.edupay.font.RobotoTextView
                    android:layout_width="wrap_content"
                    style="@style/manrope.Bold"
                    android:layout_height="wrap_content"
                    android:text="@string/to_edupay"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <com.example.edupay.font.RobotoTextView
                    style="@style/manrope.regular"
                    android:id="@+id/tvToAccountInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_edupay_info"
                    android:layout_marginBottom="36dp"/>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitPayment"
                    style="@style/manrope.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_for_payment"
                    android:backgroundTint="@color/btn_color"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- optional: pass model -->
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="12dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/light_gray_1"
        app:cardCornerRadius="16dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/event_title" />

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_date"
                android:textSize="14sp"
                android:textColor="@color/purple_200"
                android:layout_marginTop="4dp" />

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvEventBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_brief"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="12dp">

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/event_participants" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvVenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/event_venue" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvWinners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/event_winners" />
            </LinearLayout>

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvToggleDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all_details"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

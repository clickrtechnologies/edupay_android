<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradient_background"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Institute Field (TextView) -->
                <LinearLayout
                    android:id="@+id/instituteContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clInstitute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_white_bg"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clMobile">

                        <!-- Icon on the left side -->

                        <!-- TextInputLayout with TextInputEditText -->
                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/hitInstitute"
                            style="@style/manrope.semibold"
                            android:layout_width="103dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/institute"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@android:color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/tvInstitute"
                            android:layout_width="0dp"
                            style="@style/manrope.semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:hint="@string/institute_name"
                            android:textColor="@color/btn_color"
                            android:textColorHint="@color/btn_color"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/hitInstitute"
                            app:layout_constraintTop_toBottomOf="@+id/hitInstitute" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

                <!-- Branch Field (TextView - Initially hidden) -->
                <LinearLayout
                    android:id="@+id/branchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_white_bg"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clMobile">

                        <!-- Icon on the left side -->

                        <!-- TextInputLayout with TextInputEditText -->
                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/hitBranch"
                            style="@style/manrope.semibold"
                            android:layout_width="103dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/branch"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@android:color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/tvBranch"
                            android:layout_width="0dp"
                            style="@style/manrope.semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:hint="@string/branch_name"
                            android:textColor="@color/btn_color"
                            android:textColorHint="@color/btn_color"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/hitBranch"
                            app:layout_constraintTop_toBottomOf="@+id/hitBranch" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

                <!-- Batch Field -->
                <LinearLayout
                    android:id="@+id/batchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:visibility="gone">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_white_bg"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clMobile">

                        <!-- Icon on the left side -->

                        <!-- TextInputLayout with TextInputEditText -->
                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/hitBatch"
                            style="@style/manrope.semibold"
                            android:layout_width="103dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/batch"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@android:color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/tvBatch"
                            android:layout_width="0dp"
                            style="@style/manrope.semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:hint="@string/batch_name"
                            android:textColor="@color/btn_color"
                            android:textColorHint="@color/btn_color"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/hitBatch"
                            app:layout_constraintTop_toBottomOf="@+id/hitBatch" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

                <!-- Registration Field -->
                <LinearLayout
                    android:id="@+id/regNumberContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clRegistration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_white_bg"
                        android:gravity="center_vertical"
                        android:minHeight="65dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clMobile">

                        <!-- Icon on the left side -->

                        <!-- TextInputLayout with TextInputEditText -->
                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/hitRegistration"
                            style="@style/manrope.semibold"
                            android:layout_width="103dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="@string/registration"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@android:color/transparent"
                            app:boxStrokeWidth="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/tvRegNumber"
                            android:layout_width="0dp"
                            style="@style/manrope.semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:hint="@string/registration_name"
                            android:textColor="@color/btn_color"
                            android:textColorHint="@color/btn_color"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/hitRegistration"
                            app:layout_constraintTop_toBottomOf="@+id/hitRegistration" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/rounded_btn_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                   />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="16dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp">

                <!-- Logo Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/ivLogoPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_school"
                        android:contentDescription="School Logo" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUploadLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_school_logo"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="@color/white"
                    android:backgroundTint="@android:color/transparent"
                    android:icon="@drawable/ic_upload"
                    android:iconTint="@color/white"
                    android:drawablePadding="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!-- School Name -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:minHeight="65dp"
                    android:gravity="center_vertical">

                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitSchoolName"
                        style="@style/manrope.semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="School Name"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etSchoolName"
                        style="@style/manrope.semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/enter_school_name"
                        android:inputType="textCapWords"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/hitSchoolName"
                        app:layout_constraintTop_toBottomOf="@+id/hitSchoolName"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- School Address -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSchoolAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:minHeight="65dp"
                    android:gravity="center_vertical">

                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitSchoolAddress"
                        style="@style/manrope.semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/school_address"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etSchoolAddress"
                        style="@style/manrope.semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/school_address_er"
                        android:inputType="textPostalAddress"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/hitSchoolAddress"
                        app:layout_constraintTop_toBottomOf="@+id/hitSchoolAddress"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Authorised Representative Name -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRepresentativeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:minHeight="65dp"
                    android:gravity="center_vertical">

                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitRepresentativeName"
                        style="@style/manrope.semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rr_name"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etRepresentativeName"
                        style="@style/manrope.semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/rr_name_main"
                        android:inputType="textPersonName"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/hitRepresentativeName"
                        app:layout_constraintTop_toBottomOf="@+id/hitRepresentativeName"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Email -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:minHeight="65dp"
                    android:gravity="center_vertical">

                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitEmail"
                        style="@style/manrope.semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/email_address"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etEmail"
                        style="@style/manrope.semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/enter_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/hitEmail"
                        app:layout_constraintTop_toBottomOf="@+id/hitEmail"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Mobile -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRepMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:minHeight="65dp"
                    android:gravity="center_vertical">

                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitRepMobile"
                        style="@style/manrope.semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/aaa_no"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etRepMobile"
                        style="@style/manrope.semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/enter_mobile_number"
                        android:inputType="phone"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/hitRepMobile"
                        app:layout_constraintTop_toBottomOf="@+id/hitRepMobile"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- School Mobile Money Account -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clMobileMoneyAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/rounded_white_bg"
                    android:minHeight="65dp"
                    android:gravity="center_vertical">

                    <com.example.edupay.font.RobotoTextView
                        android:id="@+id/hitMobileMoneyAcc"
                        style="@style/manrope.semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/mobile_money_account"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etMobileMoneyAcc"
                        style="@style/manrope.semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@null"
                        android:hint="@string/enter_account_number"
                        android:inputType="number"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/hitMobileMoneyAcc"
                        app:layout_constraintTop_toBottomOf="@+id/hitMobileMoneyAcc"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/pic_location"
                    android:textColor="@color/black"
                    android:backgroundTint="@android:color/white"
                    android:icon="@drawable/ic_map"
                    android:iconTint="@color/black"
                    android:drawablePadding="8dp"
                    app:cornerRadius="12dp"
                    android:padding="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmitProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_size"
                    android:layout_marginTop="16dp"
                    android:text="@string/submit_profile"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/btn_color"
                    app:cornerRadius="15dp"
                    android:padding="14dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

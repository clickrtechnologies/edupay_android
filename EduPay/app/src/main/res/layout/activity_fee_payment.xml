<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/textView2"
                    style="@style/manrope.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/select_terms"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="16dp" />

                <!-- Term Selection Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp"
                    tools:layout_editor_absoluteX="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Section Title -->

                        <!-- Checkboxes Container -->
                        <LinearLayout
                            android:id="@+id/termContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical"
                            android:padding="16dp">

                            <CheckBox
                                android:id="@+id/cbTerm1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/t1"
                                style="@style/manrope.Bold"
                                android:buttonTint="@color/btn_color"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cbTerm2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/t2"
                                style="@style/manrope.Bold"
                                android:buttonTint="@color/btn_color"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cbTerm3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/t3"
                                style="@style/manrope.Bold"
                                android:buttonTint="@color/btn_color"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/tvPartialNotice"
                            style="@style/manrope.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/partial_amount"
                            android:textColor="@color/orange_500"
                            android:textSize="14sp"
                            android:visibility="gone"
                            />

                        <!-- Instruction Text -->
                        <com.example.edupay.font.RobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            style="@style/manrope.semibold"
                            android:text="@string/choose_one"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <!-- Term Fees Display -->
                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/tvTermFees"
                            style="@style/manrope.Bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/bg_rounded_green"
                            android:padding="8dp"
                            android:gravity="center"
                            android:text="Term Fees: USD 0"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- Optional Fees Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOptionalFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cardTerm"
                    tools:layout_editor_absoluteX="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.example.edupay.font.RobotoTextView
                            android:layout_width="match_parent"
                            style="@style/manrope.Bold"
                            android:layout_height="wrap_content"
                            android:text="@string/additional_options"
                            android:textColor="@color/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.example.edupay.font.RobotoTextView
                            android:layout_width="match_parent"
                            style="@style/manrope.semibold"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/optional_service"
                            android:textColor="@color/gray"
                            android:textSize="16sp" />

                        <!-- School Uniform -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbUniform"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/btn_color"
                                android:enabled="false" />

                            <com.example.edupay.font.RobotoTextView
                                android:id="@+id/txtUniform"
                                style="@style/manrope.semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="School Uniform (USD 00)"
                                android:textColor="@color/text_color"
                                android:textSize="14sp"
                                 />
                        </LinearLayout>

                        <!-- Stationary -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbStationary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/btn_color"
                                android:enabled="false" />

                            <com.example.edupay.font.RobotoTextView
                                android:id="@+id/txtStationary"
                                style="@style/manrope.semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Student Stationary (USD 00)"
                                android:textColor="@color/text_color"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <!-- Transportation -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbTransportation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/btn_color"
                                android:enabled="false" />

                            <com.example.edupay.font.RobotoTextView
                                android:id="@+id/txtTransportation"
                                style="@style/manrope.semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Transportation (USD 00)"
                                android:textColor="@color/text_color"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Total Fees Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cardOptionalFees"
                    tools:layout_editor_absoluteX="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <com.example.edupay.font.RobotoTextView
                            android:layout_width="wrap_content"
                            style="@style/manrope.Bold"
                            android:layout_height="wrap_content"
                            android:text="@string/total_amount"
                            android:textColor="@color/btn_color"
                            android:textSize="16sp" />

                        <com.example.edupay.font.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            style="@style/manrope.semibold"
                            android:text="@string/final_payable"
                            android:textColor="@color/gray"
                            android:textSize="16sp" />

                        <com.example.edupay.font.RobotoTextView
                            android:id="@+id/tvTotalFees"
                            style="@style/manrope.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="USD 0"
                            android:textColor="@color/btn_color"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <CheckBox
                    android:id="@+id/cbPartialPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/partial_payment_option"
                    android:textColor="@color/text_color"
                    android:buttonTint="@color/btn_color"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:checked="false"
                    app:layout_constraintTop_toBottomOf="@id/cardTotal"
                    app:rippleColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="16dp"/>

                <!-- Pay Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPay"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/cbPartialPayment"
                    app:rippleColor="@color/colorPrimaryDark"
                    tools:layout_editor_absoluteX="16dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
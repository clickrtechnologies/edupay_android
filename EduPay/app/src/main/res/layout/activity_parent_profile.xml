<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="24dp">

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvParentName"
                style="@style/manrope.semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parent_name"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="12dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                android:layout_gravity="center"
                app:cardElevation="6dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"

                        android:src="@drawable/upload_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivSchoolLogo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvSchoolDetail"
                style="@style/manrope.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/school_detail"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:visibility="visible"
                android:textColor="@color/btn_color"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:background="@drawable/rounded_border_white"
                android:orientation="vertical">
                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvSchoolName"
                    style="@style/manrope.semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/school_name"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:visibility="gone"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvRegisteredMobile"
                    style="@style/manrope.semibold"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content"
                    android:text="@string/registered_mobile"
                    android:textSize="13sp"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvEmail"
                    style="@style/manrope.semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <com.example.edupay.font.RobotoTextView
                    android:id="@+id/tvAdditionalMobile"
                    style="@style/manrope.semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="@string/additional_email"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvBankDetail"
                style="@style/manrope.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_detail"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:visibility="visible"
                android:textColor="@color/btn_color"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/rounded_border_white"
            android:orientation="vertical">
            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvMoneyAccount"
                style="@style/manrope.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="@string/mobile_money_account"
                android:textSize="13sp"
              />


        </LinearLayout>


            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvStudentDetail"
                style="@style/manrope.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/student_detail"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:visibility="visible"
                android:textColor="@color/btn_color"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@drawable/rounded_border_white"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.edupay.font.RobotoTextView
                android:id="@+id/tvStudentDetails"
                style="@style/manrope.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/student_details"
                android:textSize="13sp"
                android:visibility="visible"
                android:textColor="@color/btn_color"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>






            <com.example.edupay.font.RobotoTextView
                android:id="@+id/btnUploadPhoto"
                style="@style/manrope.semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_parent_photo"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="48dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border_btn"
                android:paddingVertical="14dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="6dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/btn_color">
                <Button
                    android:id="@+id/btnGoToDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_dashboard"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingVertical="14dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</layout>
